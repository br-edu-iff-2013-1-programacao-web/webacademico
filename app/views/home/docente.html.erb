<h2><%= I18n.t 'activerecord.models.docente' %></h2>

<% @docentes = Docente.all %>
<% @docentes.each do |docente| %>
    <% if docente.matricula == current_user.username %>
        <p><%= link_to I18n.t('link_to.link_me'), docente %></p>
    <% end %>
<% end %>

<table>
      <tr>
        <th><%= I18n.t 'activerecord.models.diario' %></th>
        <th><%= I18n.t 'activerecord.models.diarioaluno' %></th>
        <th><%= I18n.t 'activerecord.models.frequencia' %></th>
        <th><%= I18n.t 'activerecord.models.nota' %></th>
      </tr>
      <tr>
        <td><p><%= link_to I18n.t('activerecord.models.diario'), diarios_path %></p></td>
        <td><p><%= link_to I18n.t('activerecord.models.docente'), docentes_path %></p></td>
        <td><p><%= link_to I18n.t('activerecord.models.frequencia'), frequencias_path %></p></td>
        <td><p><%= link_to I18n.t('activerecord.models.nota'), notas_path %></p></td>
      </tr>
</table>
