<!DOCTYPE HTML>
<!-- Website Template by freewebsitetemplates.com -->
<html>
<xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<title>Web Academico</title>
    <%= stylesheet_link_tag :style %>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
</head>
<body>

	<div id="header">
		<div class="section">
			<div class="logo">
				<a href="/home/index"></a>
			</div>
			<ul>
				<li class="selected">
					<%= link_to I18n.t('link_to.index'), home_index_path %>
				</li>
				<li>
					<%= link_to I18n.t('link_to.about'), home_about_path %>
				</li>
				<li>
					<%= link_to I18n.t('link_to.developers'), home_developers_path %>
				</li>
				<li>
					<%= link_to I18n.t('link_to.contact'), home_contact_path %>
				</li>
			</ul>
		</div>
	</div>
	
	<div id="body">
	  <div>
	    <div class="featured">
	      <p><%= notice %></p>
	      <p><%= alert %></p>
	      <p><%= link_to_unless I18n.locale == :en, I18n.t('link_to.english'), locale: :en %> |
          <%= link_to_unless I18n.locale == :"pt-BR", I18n.t('link_to.portuguese'), locale: :"pt-BR" %></p>
	      <div id="user_nav">
            <% if user_signed_in? %>
              <p>Signed in as <%= current_user.username %>. Not you?
              <%= link_to I18n.t('link_to.sign_out'), destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' } %></p>
            <% end %>
            </div>
	        <p>
            <%= yield %>
            </p>
          </div>
	    </div>
	    <div id="footer">
		  <div>
			<div class="connect">
				<a href="http://twitter.com" id="twitter">twitter</a>
				<a href="http://facebook.com" id="facebook">facebook</a>
				<a href="http://googleplus.com" id="googleplus">googleplus</a>
				<a href="http://pinterest.com" id="pinterest">pinterest</a>
			</div>
			<p>
				&copy; copyright 2013 | all rights reserved.
			</p>
		</div>
	</div>
</body>
</html>
