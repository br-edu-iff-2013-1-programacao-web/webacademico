<% @notas.each do |nota| %>

    <h2><%= I18n.t "activerecord.models.nota" %></h2>

    <table>
      <tr>
        <th><%= I18n.t 'activerecord.attributes.nota.nota' %></th>
        <th><%= I18n.t 'activerecord.attributes.nota.avaliacao' %></th>
        <th><%= I18n.t 'activerecord.attributes.nota.diarioaluno_id' %></th>
      </tr>
      <tr>
        <td><%= nota.nota %></td>
        <td><%= nota.avaliacao %></td>
        <td><%= nota.diarioaluno %></td>
      </tr>
      <tr>
        <% if can? :read, @nota %>
            <td><p><%= link_to I18n.t('link_to.show'), nota %></p></td>
        <% end %>
        <% if can? :update, @nota %>
            <td><p><%= link_to I18n.t('link_to.edit'), edit_nota_path(nota) %></p></td>
        <% end %>
        <% if can? :delete, @nota %>
            <td><p><%= link_to I18n.t('link_to.delete'), nota, method: :delete, data: { confirm: 'Are you sure?' } %></p></td>
        <% end %>
      </tr>
    </table>
<% end %>

<br />
<% if can? :create, @nota %>
    <p><%= link_to I18n.t('link_to.new'), new_nota_path %></p>
<% end %>
